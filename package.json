{
  "name": "postcss-hash",
  "version": "0.2.0",
  "description": "PostCSS plugin to replace output file names with HASH algorithms (md5, sha256, sha512, etc) and string length of your choice - for cache busting",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "postcss-hash",
    "cache",
    "cache-busting",
    "cache-buster",
    "cachebuster",
    "hash",
    "md5",
    "md4",
    "md2",
    "sha",
    "sha1",
    "sha224",
    "sha256",
    "sha384",
    "sha512",
    "mdc2",
    "ripemd160",
    "name-changer",
    "manifest"
  ],
  "author": "dacodekid",
  "license": "MIT",
  "repository": "dacodekid/postcss-hash",
  "bugs": {
    "url": "https://github.com/dacodekid/postcss-hash/issues"
  },
  "homepage": "https://github.com/dacodekid/postcss-hash",
  "dependencies": {
    "fs-extra": "^4.0.1",
    "jsonfile": "^3.0.1",
    "lodash": "^4.17.4",
    "postcss": "^6.0.1"
  },
  "devDependencies": {
    "eslint": "^3.19.0",
    "eslint-config-postcss": "^2.0.2",
    "jest": "^20.0.0",
    "mock-fs": "^4.4.1"
  },
  "scripts": {
    "lint": "eslint --init",
    "test": "jest && eslint *.js",
    "test:watch": "jest --watch"
  },
  "eslintConfig": {
    "extends": "eslint-config-postcss/es5",
    "rules": {
      "max-len": [2, 100]
    },
    "env": {
      "jest": true
    }
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/data/"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|js)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  }
}
